<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Proyeto_DAM2_Tienda_Qr.vista.usuario.activitys.Activity_recuperar_pwd">

    <LinearLayout
        android:id="@+id/layoutRecurarPwd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputRecuperaMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp">

            <AutoCompleteTextView
                android:id="@+id/texRecupEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:hint="Entre el Correio" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputRecuperaPass1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp">

            <AutoCompleteTextView
                android:id="@+id/texRecupPass1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:hint="Entre la nueva Contraseña" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputRecuperaPass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp">

            <AutoCompleteTextView
                android:id="@+id/texRecupPass2"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:hint="Confirma la nueva Contraseña" />


        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_recuperaPwdUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_raund"
            android:text="Guardar Los cambios"
            android:textAllCaps="false"
            android:textColor="@color/color7"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_volver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_raund_reg"
            android:text=" Volver al inicio"
            android:textAllCaps="false"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>